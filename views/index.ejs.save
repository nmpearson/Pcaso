<!doctype html>
<html>
  <%- include head.ejs %>  
  <body>
    <%- include header.ejs %>      
    <main>
      <!-- Uncomment when using new datascapes on frontpage -->
      <!-- <script src="/js/index-controller.js"></script>   -->
      
      <div class="splash-container" style="height: 100%;">
	<div class="splash">
          <h1 class="splash-head"><span class="pcaso"></span></h1>
          <p class="splash-subhead" style="text-transform: none;">
            <i>Paint, share, and explore datascapes.</i>
          </p>
	  
	  <div id="datascape-preview-container">


	    <div class="pure-g">
	      <div class="pure-u-1-12" id="blank"><p> </p></div>

	      
		</div>
	      <div class="pure-u-11-12">
		<i style="float: center">Featured datascapes</i>
	    
	    </div>

	      
	    <div class="pure-g">
	      <div class="pure-u-1-24" id="blank"></div>

	      
	      <div class="pure-u-7-24" id="tile-right">
		<div class="dataspace-tile pure-u-1-5"
		     style="background-image: url(https://pcaso.io/users-public-data/674dfca632b960a13c4ade5b/files/thumbnails.png);">
		  <a href="/datascape/ip9zc1" style="display: block; height: 100%;">
		    <h4>data visual</h4>
		  </a>
		</div>
	      </div>
	      
	      <div class="pure-u-1-3" id="tile-center">
		<div class="dataspace-tile pure-u-1-5"
		     style="background-image: url(https://pcaso.io/users-public-data/673dd2e315c5430d9f908655/files/thumbnails/673dd3a915c5430d9f9086d2.png);">
		  <a href="/datascape/ygp367" style="display: block; height: 100%;">
			<h4>visualised</h4>
		  </a>
		</div>
	      </div>
	      
	      
	      <div class="pure-u-7-24" id="tile-left">
		<div class="dataspace-tile pure-u-1-5"
		     style="background-image: url(https://pcaso.io/users-public-data/673dd2e315c5430d9f908655/files/thumbnails/673dd34115c5430d9f90867e.png);">
		  <a href="/datascape/goscui" style="display: block; height: 100%;">
		    <h4>something</h4>
		  </a>
		</div>
	      </div>
	      
	      <div class="pure-u-1-24" id="view-more">
		<a href="/gallery"><h3 class="" style="color: black; margin-top: 6.5em;"> More</h3></a>
	      </div>

	    </div>
	    
	  </div>
	  
          <p>
	    
	    <% if (user) { %>
	    
            <a href="/upload" class="pure-button pure-button-success lets-go"><i class="fa fa-paint-brush"></i> Paint new datascape</a>
	    
	    <% } else { %>
	    
	    <a href="/sign-in" class="pure-button pure-button-success lets-go">Sign in to paint new datascape</a>

	    <% } %>
          </p>
	</div>
      </div>
      
    </main>
  </body>  
</html>
